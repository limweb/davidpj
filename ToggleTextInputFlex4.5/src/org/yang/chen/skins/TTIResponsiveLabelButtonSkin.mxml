<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:ns="library://ns.adobe.com/flex/mx"
			 alpha.disabled="0.7"
			 rollOverColor.over="#AEC7ED">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata> 
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" />
		<s:State name="down" />
		<s:State name="disabled" />
	</s:states>
	
	<!--Background with outter stroke-->
	<s:Rect id="bg" left="0" width.over="{labelDisplay.width+10}" top="0" bottom="0" radiusX="3" alpha="0.5">
		<s:fill>
			<s:SolidColor color="0xbfdbef"/>
		</s:fill>
	</s:Rect>
	
	<!-- Text-->
	<s:Label id="labelDisplay" left="5" top="5" bottom="5" color="0x333333" focusEnabled="false"
			 textAlign="left" verticalAlign="middle"
			 alpha.disabled="0.5"
			 textDecoration.over="none"> 
	</s:Label> 
</s:SparkSkin>